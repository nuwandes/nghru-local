<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <import type="org.southasia.ghru.ui.samplecollection.fast.reshedule.ResheduleDialogViewModel" />

        <variable
            name="viewModel"
            type="org.southasia.ghru.ui.samplecollection.fast.reshedule.ResheduleDialogViewModel" />

        <import type="android.text.Html" />


    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_24"
                android:paddingEnd="@dimen/margin_24">

                <TextView
                    style="@style/TextAppearance.Text.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_32"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/reschedule_visit"
                    android:textColor="#000000"
                    android:textSize="@dimen/default_font_size" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24"
                    android:background="@drawable/ic_seperator" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/otherwise_reschedule_a_visit_and_remind_the_participant_to_avoid_any_sort_of_food_other_than_water_for_8_hours_prior_to_the_appointment"
                    android:textAlignment="viewStart"
                    android:textColor="#DE000000"
                    android:textSize="@dimen/default_font_size" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24"
                    android:background="@drawable/ic_seperator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/margin_32"
                    android:layout_marginBottom="@dimen/margin_32"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_button_revisited_household"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/twenty_one_dp"
                        android:text="@string/cancel"
                        android:textColor="@color/defult_blue"
                        android:textSize="@dimen/default_font_size" />

                    <Button
                        android:id="@+id/buttonNext"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_32"
                        android:background="@drawable/ic_button_fill_primary"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/twenty_one_dp"
                        android:text="@string/got_it"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_font_size" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</layout>