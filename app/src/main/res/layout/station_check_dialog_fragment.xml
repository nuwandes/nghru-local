<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <import type="org.southasia.ghru.ui.stationcheck.StationCheckDialogViewModel" />

        <variable
            name="viewModel"
            type="org.southasia.ghru.ui.stationcheck.StationCheckDialogViewModel" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_24"
                android:paddingEnd="@dimen/margin_24">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_icon_status_warning_yellow" android:layout_gravity="center"  android:layout_marginTop="@dimen/margin_32"/>

                <TextView
                    style="@style/TextAppearance.Text.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_24"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="start"
                    android:text="@string/app_repeat_station"
                    android:textColor="#000000"
                    android:textSize="@dimen/default_font_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24"
                    android:layout_marginBottom="@dimen/margin_24"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonAcceptAndContinue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_button_fill_primary"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/twenty_one_dp"
                        android:paddingEnd="@dimen/twenty_one_dp"
                        android:text="@string/app_continue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_font_size" />

                    <Button
                        android:id="@+id/saveAndExitButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_24"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/ic_button_revisited_household"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/twenty_one_dp"
                        android:paddingEnd="@dimen/twenty_one_dp"
                        android:text="@string/app_button_go_back"
                        android:textColor="@color/defult_blue"
                        android:textSize="@dimen/default_font_size"/>
                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</layout>