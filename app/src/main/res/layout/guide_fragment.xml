<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="org.southasia.ghru.ui.ecg.guide.GuideViewModel" />

        <variable
            name="viewModel"
            type="org.southasia.ghru.ui.ecg.guide.GuideViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6F6FF"
        android:clickable="false"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:navGraph="@navigation/body_measurements"
        tools:context="org.southasia.ghru.BodyMeasurementsActivity"
        tools:ignore="MergeRootFrame">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_normal"
            app:srcCompat="@drawable/info_icon" />I

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_normal"
            android:fontFamily="@font/roboto"
            android:text="@string/bp_instructions_1"
            android:textColor="#000000"
            android:textSize="20sp" />


    </LinearLayout>
</layout>