<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="org.southasia.ghru.ui.ecg.manualentry.ManualEntryECGModel" />

        <variable
            name="viewModel"
            type="org.southasia.ghru.ui.ecg.manualentry.ManualEntryECGModel" />

        <variable
            name="userResource"
            type="org.southasia.ghru.vo.Resource" />

        <variable
            name="retryCallback"
            type="org.southasia.ghru.ui.common.RetryCallback" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="org.southasia.ghru.SettingActivity"
        tools:ignore="MergeRootFrame">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/manual_entry_participant_id"
                app:titleTextColor="@color/white" />


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:dividerPadding="1dp"
            android:drawableEnd="@drawable/ic_seperator"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:showDividers="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textLayoutCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/ic_input_field_text"
                android:gravity="start"
                android:paddingStart="@dimen/margin_normal"
                android:paddingTop="@dimen/margin_normal"
                android:paddingEnd="@dimen/margin_normal"
                android:textAlignment="viewStart"
                android:textColorHint="@color/enum_hint_color"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.github.pinball83.maskededittext.MaskedEditText
                    android:id="@+id/editTextCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical|start"
                    android:hint="@string/app_manual_entry_field_participant_id"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/enum_hint_color"
                    android:textSize="@dimen/default_font_size"
                    android:translationY="3dp"
                    app:mask="P**-****-*"
                    app:notMaskedSymbol="*"
                    app:validateEmpty="@{true}" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20"
                    android:background="@drawable/ic_button_fill_primary"
                    android:drawableEnd="@drawable/ic_icon_arrow_front_white"
                    android:paddingEnd="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/app_continue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font_size" />

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_60"
                    android:layout_margin="@dimen/margin_20"
                    android:background="@drawable/ic_button_frame"
                    android:drawableEnd="@drawable/ic_icon_arrow_front_white"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/app_back_to_barcode_scanner"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/default_font_size" />

            </LinearLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>