<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bodyMeasurementValue"
            type="org.southasia.ghru.vo.request.BodyMeasurementValue" />

        <variable
            name="bodyMeasurementValueHip"
            type="org.southasia.ghru.vo.request.BodyMeasurementValue" />
        <import type="org.southasia.ghru.ui.bodymeasurements.hipwaist.HipWaistViewModel" />

        <variable
            name="viewModel"
            type="org.southasia.ghru.ui.bodymeasurements.hipwaist.HipWaistViewModel" />


    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:navGraph="@navigation/body_measurements"
        tools:context="org.southasia.ghru.BodyMeasurementsActivity"
        tools:ignore="MergeRootFrame">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="Hip and Waist"
                app:titleTextColor="@color/white" />


        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@drawable/divider"
            android:dividerPadding="@dimen/one_dp"
            android:drawableEnd="@drawable/ic_seperator"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:showDividers="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/waistTextLayout"
                    android:layout_width="@dimen/margin_200"
                    android:layout_height="@dimen/bp_text_width"
                    android:layout_marginTop="@dimen/margin_32"
                    android:layout_marginBottom="@dimen/margin_24"
                    android:layout_marginStart="@dimen/margin_24"
                    android:background="@drawable/ic_input_field_text"
                    android:gravity="start"
                    android:paddingStart="@dimen/margin_normal"
                    android:paddingTop="14dp"
                    android:paddingEnd="@dimen/margin_normal"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/enum_hint_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/waistSizeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@color/transparent"
                        android:gravity="center_vertical|start"
                        android:hint="@string/bp_waist_size"
                        android:inputType="numberDecimal"
                        android:text="@={bodyMeasurementValue.value}"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font_size"
                        android:translationY="3dp"
                        app:validateEmpty="@{true}"
                        app:validateRegex='@{"^(?!\\s)^([a-zA-Z0-9 !-~]){1,}$"}'/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:text="@string/bp_units_cm"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/hipSizeTextLayout"
                    android:layout_width="@dimen/margin_200"
                    android:layout_height="@dimen/bp_text_width"
                    android:layout_marginBottom="@dimen/margin_24"
                    android:layout_marginStart="@dimen/margin_24"
                    android:background="@drawable/ic_input_field_text"
                    android:gravity="start"
                    android:paddingStart="@dimen/margin_normal"
                    android:paddingTop="14dp"
                    android:paddingEnd="@dimen/margin_normal"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/enum_hint_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hipSizeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@color/transparent"
                        android:gravity="center_vertical|start"
                        android:hint="@string/hip_size"
                        android:inputType="numberDecimal"
                        android:text="@={bodyMeasurementValueHip.value}"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font_size"
                        android:translationY="3dp"
                        app:validateEmpty="@{true}"
                        app:validateRegex='@{"^(?!\\s)^([a-zA-Z0-9 !-~]){1,}$"}'/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:text="@string/bp_units_cm"
                    android:textSize="20sp" />

            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_24"
                android:background="@drawable/ic_seperator" />

            <LinearLayout
                android:id="@+id/contactRelationshipTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_32"
                android:layout_weight="0.5"
                android:background="@drawable/ic_input_field_text"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_normal"
                android:paddingTop="14dp"
                android:paddingEnd="@dimen/margin_normal"
                android:textAlignment="viewStart"
                android:textColorHint="@color/enum_hint_color"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/device_id"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/deviceIdSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-9dp"
                    android:layout_marginTop="-12dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical|start"
                    android:singleLine="true"
                    android:spinnerMode="dropdown"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="@dimen/default_font_size"
                    android:translationY="3dp" />


            </LinearLayout>
            <TextView
                    android:id="@+id/textView_device_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/select_device"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:visibility="gone"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_20"
                android:background="@drawable/ic_comment_background"
                android:gravity="top|start"
                android:hint="@string/comments_notes_optional"
                android:inputType="textCapWords|textCapSentences|textPersonName"
                android:padding="24dp"
                android:text="@={bodyMeasurementValue.comment}"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textColorHint="@color/enum_hint_color"
                android:textSize="@dimen/default_font_size" />


            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_32"
                android:layout_marginBottom="@dimen/margin_24"
                android:background="@drawable/ic_button_fill_primary"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/complete_hip_and_waist"
                android:textColor="@color/white"
                android:textSize="@dimen/default_font_size" />

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>