<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_20"
    android:gravity="center">

    <ProgressBar
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:theme="@style/ProgressStyle"/>
    <TextView
        android:id="@+id/dialogTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/gpsStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:textAlignment="center"
        android:textSize="12dp"
        android:text="GPS information's Available"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/gpsSatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:textAlignment="center"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/button_continue_geo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_goe"
        android:textColor="@color/white"
        android:padding="@dimen/margin_20" />

    <Button
        android:id="@+id/button_get_network_provider_geo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_from_network_provider"
        android:textColor="@color/white"
        android:padding="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"/>

    <Button
        android:id="@+id/button_no_geo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continie_no_locaton"
        android:textColor="@color/white"
        android:padding="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"/>
</LinearLayout>