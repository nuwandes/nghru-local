<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_24"
                android:paddingEnd="@dimen/margin_24">

                <TextView
                    style="@style/TextAppearance.Text.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_32"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/enumeration_explanation_permission_modal_cancel_title"
                    android:textColor="#000000"
                    android:textSize="@dimen/default_font_size" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_24"
                        android:button="@drawable/radio_button"
                        android:fontFamily="@font/roboto"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="@string/enumeration_explanation_permission_modal_cancel_option_1"
                        android:textSize="21sp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_24"
                        android:button="@drawable/radio_button"
                        android:fontFamily="@font/roboto"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="@string/enumeration_explanation_permission_modal_cancel_option_2"
                        android:textSize="21sp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_24"
                        android:button="@drawable/radio_button"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="@string/enumeration_explanation_permission_modal_cancel_option_3"
                        android:textSize="21sp" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/margin_32"
                    android:layout_marginBottom="@dimen/margin_32"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_button_revisited_household"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"

                        android:text="@string/cancel"
                        android:textColor="@color/defult_blue"
                        android:textSize="@dimen/default_font_size" />

                    <Button
                        android:id="@+id/buttonAcceptAndContinue"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_32"
                        android:background="@drawable/ic_button_fill_primary"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="@string/app_button_go_to_home"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_font_size" />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</layout>